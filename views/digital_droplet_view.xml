<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tree view -->
        <record id="view_digital_droplet_tree" model="ir.ui.view">
            <field name="name">digital.droplet.tree</field>
            <field name="model">digital.droplet</field>
            <field name="arch" type="xml">
                <tree string="Droplets">
                    <field name="name"/>
                    <field name="region"/>
                    <field name="image"/>
                    <field name="size"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_digital_droplet_form" model="ir.ui.view">
            <field name="name">digital.droplet.form</field>
            <field name="model">digital.droplet</field>
            <field name="arch" type="xml">
                <form string="Droplet">
                <header>
                    <button name="action_create_new_droplet" type="object" string="Create Droplet" attrs="{'invisible':[('state','!=','draft'),('state','!=','delete')]}"/>
                    <button name="action_delete_droplet" type="object" string="Delete Droplet" confirmation="Are you sure?, you will lose everything." attrs="{'invisible':['|',('state','!=','draft'), ('state','!=','delete')]}"/>
                    <t attrs="{'invisible':[('localhost','==',True)]}">
                        <button name="action_power_off_droplet" type="object" confirmation="Are you sure?, this is localhost computer." string="Shutdown" attrs="{'invisible':['|',('state','==','power_off'),('state','==','delete')]}"/>
                        <button name="action_reboot_droplet" type="object" string="Reboot" confirmation="Are you sure?, this is localhost computer." attrs="{'invisible':['|',('state','==','power_off'),('state','==','delete')]}"/>
                    </t>
                    <t attrs="{'invisible':[('localhost','!=',True)]}">
                        <button name="action_power_off_droplet" type="object" string="Shutdown" attrs="{'invisible':['|',('state','==','power_off'),('state','==','delete')]}"/>
                        <button name="action_reboot_droplet" type="object" string="Reboot" attrs="{'invisible':['|',('state','==','power_off'),('state','==','delete')]}"/>
                    </t>
                    <button name="action_power_on_droplet" type="object" string="Power" attrs="{'invisible':['|',('state','==','power_on'),('state','==','delete')]}"/>
                    <button name="action_reset_root_password_droplet" type="object" string="Reset Root Password" attrs="{'invisible':['|',('state','==','draft'),('state','==','delete')]}"/>
                    <button name="action_refresh_droplet" type="object" string="Refresh" attrs="{'invisible':['|',('state','==','draft'),('state','==','delete')]}"/>
                    <button name="action_take_snapshot_droplet" type="object" string="Take snapshot" attrs="{'invisible':['|',('state','==','draft'),('state','==','delete')]}"/>
                    <button name="action_resize_droplet" type="object" string="Resize" attrs="{'invisible':['|',('state','==','draft'),('state','==','delete')]}"/>
                    <field name="state" widget="statusbar" />
                </header>
                    <div>
                        <p><label for="name" class="oe_inline" /> <h1><field name="name" class="oe_inline"/></h1></p>
                        <p><label for="region" class="oe_inline" /> <field name="region" class="oe_inline"/></p>
                        <p><label for="size" class="oe_inline" /> <field name="size" class="oe_inline"/>
                           <label for="size_vcpus" class="oe_inline" /> <field name="size_vcpus" class="oe_inline"/>
                           <label for="size_disk" class="oe_inline" /> <field name="size_disk" class="oe_inline"/>
                           <label for="size_transfer" class="oe_inline" /> <field name="size_transfer" class="oe_inline"/>
                           <label for="size_price_monthly" class="oe_inline" /> <field name="size_price_monthly" class="oe_inline"/>
                           <label for="size_price_hourly" class="oe_inline" /> <field name="size_price_hourly" class="oe_inline"/>
                        </p>
                        <p><label for="image" class="oe_inline" /> <field name="image" class="oe_inline"/></p>
                        <p><label for="backups" class="oe_inline" /> <field name="backups" class="oe_inline"/></p>
                        <p><label for="status" class="oe_inline" /> <field name="status" class="oe_inline"/></p>
                        <p><label for="date" class="oe_inline" /> <field name="date" class="oe_inline"/></p>
                        <p><label for="networks" class="oe_inline" /> <field name="networks" class="oe_inline"/></p>
                        <p><label for="kernel" class="oe_inline" /> <field name="kernel" class="oe_inline"/></p>
                        <p><label for="code" class="oe_inline" /> <field name="code" class="oe_inline"/></p>
                        <p><label for="localhost" class="oe_inline" /> <field name="localhost" class="oe_inline"/></p>
                    </div>
                </form>
            </field>
        </record>

        <!-- Window action -->
        <record id="action_digital_droplet" model="ir.actions.act_window">
            <field name="name">Digital Droplet</field>
            <field name="res_model">digital.droplet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window.view" id="action_digital_droplet_tree">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_digital_droplet_tree"/>
            <field name="act_window_id" ref="action_digital_droplet"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_digital_droplet_form">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_digital_droplet_form"/>
            <field name="act_window_id" ref="action_digital_droplet"/>
        </record>

        <!-- ### MENU ACCESS ### -->
        <menuitem id="digitalocean_integration" name="DigitalOcean Integration" parent="base.menu_definitions" sequence="60"/>

        <menuitem id="menu_digital_droplet"
            parent="digitalocean_integration"
            action="action_digital_droplet"
            sequence="1"
            name="Droplets"/>

        <record id="action_digital_image" model="ir.actions.act_window">
            <field name="name">Digital Image</field>
            <field name="res_model">digital.image</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_digital_image_tree" model="ir.ui.view">
            <field name="name">digital.image.tree</field>
            <field name="model">digital.image</field>
            <field name="arch" type="xml">
                <tree string="Droplets">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="public"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="action_digital_image_tree">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_digital_image_tree"/>
            <field name="act_window_id" ref="action_digital_image"/>
        </record>

    </data>
</openerp>
